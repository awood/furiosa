<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <contextName>furiosa</contextName>
    <appender name="ConsoleAppender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{ISO8601} [thread=%thread] %-5p %c - %m%n</pattern>
        </encoder>
    </appender>


    <logger name="cc.untar.furiosa" level="INFO"/>

    <root level="WARN">
        <appender-ref ref="ConsoleAppender" />
    </root>
</configuration>
